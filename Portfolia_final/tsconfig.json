{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
